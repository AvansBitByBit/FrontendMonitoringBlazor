@page "/statistics"
@using Microsoft.AspNetCore.Components.Web
@using MudBlazor

<PageTitle>Statistieken</PageTitle>

<MudPaper Class="responsive-padding mx-auto fade-in" MaxWidth="800px">
    <MudText Typo="Typo.h3" GutterBottom="true" Class="mb-4 text-responsive-h3">
        <MudIcon Icon="@Icons.Material.Filled.Analytics" Class="mr-2" />
        Afvaldetectie Statistieken
    </MudText>
    <MudText Typo="Typo.body1" Class="mb-6 text-responsive-body">
        Uitgebreide analyses en inzichten van ons AI-aangedreven afvalmonitoringsysteem in Breda.
    </MudText>

    <MudAlert Severity="Severity.Info" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-2" />
        De volgende statistieken zijn gebaseerd op gesimuleerde gegevens voor demonstratiedoeleinden.
    </MudAlert>

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Huidige Statistieken</MudText>
    
    <MudGrid Spacing="2" Class="mb-6">
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.DeleteSweep" Style="font-size: 2.5rem; color: var(--mud-palette-primary);" Class="mb-2" />
                <MudText Typo="Typo.h4" Class="text-responsive-h4" Style="color: var(--mud-palette-primary);">1,247</MudText>                <MudText Typo="Typo.subtitle1" Class="text-responsive-body">Totale Detecties</MudText>
                <MudText Typo="Typo.caption" Class="text-responsive-body" Style="color: var(--mud-palette-text-secondary);">Deze maand</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Style="font-size: 2.5rem; color: var(--mud-palette-success);" Class="mb-2" />
                <MudText Typo="Typo.h4" Class="text-responsive-h4" Style="color: var(--mud-palette-success);">96%</MudText>                <MudText Typo="Typo.subtitle1" Class="text-responsive-body">Opruimpercentage</MudText>
                <MudText Typo="Typo.caption" Class="text-responsive-body" Style="color: var(--mud-palette-text-secondary);">Binnen 24u</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.Schedule" Style="font-size: 2.5rem; color: var(--mud-palette-warning);" Class="mb-2" />
                <MudText Typo="Typo.h4" Class="text-responsive-h4" Style="color: var(--mud-palette-warning);">2.3u</MudText>
                <MudText Typo="Typo.subtitle1" Class="text-responsive-body">Gem. Reactie</MudText>
                <MudText Typo="Typo.caption" Class="text-responsive-body" Style="color: var(--mud-palette-text-secondary);">Uren</MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Style="font-size: 2.5rem; color: var(--mud-palette-info);" Class="mb-2" />
                <MudText Typo="Typo.h4" Class="text-responsive-h4" Style="color: var(--mud-palette-info);">42</MudText>
                <MudText Typo="Typo.subtitle1" Class="text-responsive-body">Actieve Zones</MudText>
                <MudText Typo="Typo.caption" Class="text-responsive-body" Style="color: var(--mud-palette-text-secondary);">Gemonitord</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-6" />

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Wekelijkse Trends</MudText>
    
    <MudPaper Elevation="2" Class="responsive-padding mb-6 card-animate">
        <MudGrid Spacing="3">
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h6" Class="mb-3 text-responsive-h6">Detectievolume</MudText>                <MudList T="string">                    <MudListItem T="string" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudText>Maandag</MudText>
                            <MudProgressLinear Color="Color.Primary" Size="Size.Medium" Value="85" Class="flex-grow-1 mx-3" />
                            <MudText>204</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudText>Dinsdag</MudText>
                            <MudProgressLinear Color="Color.Secondary" Size="Size.Medium" Value="72" Class="flex-grow-1 mx-3" />
                            <MudText>178</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudText>Woensdag</MudText>
                            <MudProgressLinear Color="Color.Tertiary" Size="Size.Medium" Value="91" Class="flex-grow-1 mx-3" />
                            <MudText>223</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>
            </MudItem>
            <MudItem xs="12" md="6">                <MudText Typo="Typo.h6" Class="mb-3 text-responsive-h6">Afvalcategorieën</MudText>
                <MudList T="string">                    <MudListItem T="string" Icon="@Icons.Material.Filled.LocalDining" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudText>Voedselafval</MudText>
                            <MudChip Color="Color.Primary" Size="Size.Small">42%</MudChip>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Recycling" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudText>Recyclebaar</MudText>
                            <MudChip Color="Color.Success" Size="Size.Small">28%</MudChip>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Delete" Class="text-responsive-body">                        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
                            <MudText>Algemeen Afval</MudText>
                            <MudChip Color="Color.Warning" Size="Size.Small">30%</MudChip>
                        </MudStack>
                    </MudListItem>
                </MudList>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudDivider Class="my-6" />

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Milieu-impact</MudText>
    
    <MudGrid Spacing="2" Class="mb-6">
        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.Nature" Style="font-size: 2rem; color: var(--mud-palette-success);" Class="mb-2" />
                <MudText Typo="Typo.h6" Class="text-responsive-h6">Schonere Straten</MudText>
                <MudText Typo="Typo.body2" Class="text-responsive-body">
                    15% minder zwerfafval sinds implementatie systeem
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.Co2" Style="font-size: 2rem; color: var(--mud-palette-info);" Class="mb-2" />
                <MudText Typo="Typo.h6" Class="text-responsive-h6">CO₂ Besparing</MudText>
                <MudText Typo="Typo.body2" Class="text-responsive-body">
                    2,3 ton CO₂ bespaard door geoptimaliseerde routes
                </MudText>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudPaper Elevation="2" Class="responsive-padding card-animate text-center">
                <MudIcon Icon="@Icons.Material.Filled.SentimentVerySatisfied" Style="font-size: 2rem; color: var(--mud-palette-warning);" Class="mb-2" />
                <MudText Typo="Typo.h6" Class="text-responsive-h6">Tevredenheid</MudText>
                <MudText Typo="Typo.body2" Class="text-responsive-body">
                    87% burgertevredenheid met verbeteringen in netheid
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-6" />

    <MudPaper Elevation="2" Class="responsive-padding card-animate">
        <MudText Typo="Typo.h5" Class="mb-3 text-responsive-h5">Systeemprestaties</MudText>
        <MudGrid Spacing="3">
            <MudItem xs="12" md="6">
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Speed" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween">
                            <MudText>Detectienauwkeurigheid</MudText>
                            <MudText Style="color: var(--mud-palette-success);">94,7%</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.NetworkCheck" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween">
                            <MudText>Systeem Uptime</MudText>
                            <MudText Style="color: var(--mud-palette-success);">99,2%</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Timer" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween">
                            <MudText>Verwerkingstijd</MudText>
                            <MudText Style="color: var(--mud-palette-info);">1,2s gem.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Storage" Class="text-responsive-body">
                        <MudStack Row="true" Justify="Justify.SpaceBetween">
                            <MudText>Data Verwerkt</MudText>
                            <MudText Style="color: var(--mud-palette-warning);">15,7 TB</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudPaper>
