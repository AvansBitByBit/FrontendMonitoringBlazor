@page "/statistics"
<MudPaper Elevation="2" Class="main-home-content card-animate gradient-bg fade-in">
    <MudText Typo="Typo.h3" Class="mb-2 text-gradient text-responsive-h3 animate-pop">Statistieken & Impact</MudText>
    <MudGrid Class="dashboard-container">
        <MudItem xs="12" md="4">
            <MudCard Class="dashboard-card card-animate">
                <MudText Typo="Typo.h5" Class="text-gradient">Afvalmeldingen</MudText>
                <MudText Typo="Typo.h3" Class="text-responsive-h3">1.234</MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Class="dashboard-card card-animate">
                <MudText Typo="Typo.h5" Class="text-gradient">Opgeruimd</MudText>
                <MudText Typo="Typo.h3" Class="text-responsive-h3">1.100</MudText>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Class="dashboard-card card-animate">
                <MudText Typo="Typo.h5" Class="text-gradient">Burgers betrokken</MudText>
                <MudText Typo="Typo.h3" Class="text-responsive-h3">350</MudText>
            </MudCard>
        </MudItem>
    </MudGrid>
    <MudDivider Class="mb-4 slide-in" />
    <MudText Typo="Typo.body1" Class="text-responsive-body fade-in">
        Deze cijfers zijn een indicatie van de impact van het platform.
    </MudText>
</MudPaper>
