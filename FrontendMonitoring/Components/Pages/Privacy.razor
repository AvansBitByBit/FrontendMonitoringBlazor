@page "/privacy"
@using Microsoft.AspNetCore.Components.Web
@using MudBlazor

<PageTitle>Privacybeleid</PageTitle>

<MudPaper Class="responsive-padding mx-auto fade-in" MaxWidth="800px">
    <MudText Typo="Typo.h3" GutterBottom="true" Class="mb-4 text-responsive-h3">
        <MudIcon Icon="@Icons.Material.Filled.Security" Class="mr-2" />
        Privacybeleid
    </MudText>
    <MudText Typo="Typo.body1" Class="mb-6 text-responsive-body">
        Wij nemen uw privacy serieus. Dit beleid legt uit hoe wij uw gegevens verzamelen, gebruiken en beschermen in ons afvaldetectieplatform.
    </MudText>

    <MudAlert Severity="Severity.Info" Class="mb-6">
        <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-2" />
        <strong>Belangrijk:</strong> Wij slaan geen foto's of afbeeldingen op. Ons systeem verwerkt visuele gegevens in real-time zonder permanente opslag.
    </MudAlert>

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Gegevensverzameling</MudText>
      <MudPaper Elevation="2" Class="responsive-padding mb-6 card-animate">
        <MudText Typo="Typo.body1" Class="mb-4 text-responsive-body">
            Wij verzamelen en verwerken alleen de minimale gegevens die nodig zijn om onze afvaldetectiediensten te verlenen:
        </MudText>
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.LocationOn" Class="text-responsive-body">
                <MudText><strong>Locatiegegevens:</strong> GPS-co√∂rdinaten van gedetecteerd afval voor kaartweergave en opruimroutes</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Analytics" Class="text-responsive-body">
                <MudText><strong>Detectie Metadata:</strong> Afvaltype, detectiebetrouwbaarheid en tijdstempelinformatie</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.AccountCircle" Class="text-responsive-body">
                <MudText><strong>Gebruikersinformatie:</strong> Accountdetails voor geregistreerde gebruikers (naam, e-mail, rol)</MudText>
            </MudListItem>
        </MudList>
    </MudPaper>

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Hoe Wij Uw Gegevens Gebruiken</MudText>
    
    <MudPaper Elevation="2" Class="responsive-padding mb-6 card-animate">        <MudGrid Spacing="3">
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h6" Class="mb-3 text-responsive-h6">Primair Gebruik</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Search" Class="text-responsive-body">
                        <MudText>Detecteren en voorspellen van afvalophoping</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Route" Class="text-responsive-body">
                        <MudText>Optimaliseren van opruimroutes en -schema's</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Insights" Class="text-responsive-body">
                        <MudText>Verstrekken van analyses en rapportages</MudText>
                    </MudListItem>
                </MudList>
            </MudItem>
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h6" Class="mb-3 text-responsive-h6">Verbeteringen</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Psychology" Class="text-responsive-body">
                        <MudText>Verbeteren van AI-modelnauwkeurigheid</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.Tune" Class="text-responsive-body">
                        <MudText>Verbeteren van systeemprestaties</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.BugReport" Class="text-responsive-body">
                        <MudText>Identificeren en oplossen van problemen</MudText>
                    </MudListItem>
                </MudList>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Gegevensbescherming</MudText>
    
    <MudPaper Elevation="2" Class="responsive-padding mb-6 card-animate">
        <MudGrid Spacing="2">            <MudItem xs="12" md="4">
                <MudStack AlignItems="AlignItems.Center" Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Lock" Style="font-size: 2rem; color: var(--mud-palette-success);" Class="mb-2" />
                    <MudText Typo="Typo.h6" Class="text-responsive-h6">Versleuteling</MudText>
                    <MudText Typo="Typo.body2" Class="text-responsive-body">
                        Alle gegevens worden versleuteld tijdens transport en opslag
                    </MudText>
                </MudStack>
            </MudItem>            <MudItem xs="12" md="4">
                <MudStack AlignItems="AlignItems.Center" Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.AdminPanelSettings" Style="font-size: 2rem; color: var(--mud-palette-warning);" Class="mb-2" />
                    <MudText Typo="Typo.h6" Class="text-responsive-h6">Toegangscontrole</MudText>
                    <MudText Typo="Typo.body2" Class="text-responsive-body">
                        Alleen geautoriseerd personeel heeft toegang tot gegevens
                    </MudText>
                </MudStack>
            </MudItem>            <MudItem xs="12" md="4">
                <MudStack AlignItems="AlignItems.Center" Class="text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Style="font-size: 2rem; color: var(--mud-palette-info);" Class="mb-2" />
                    <MudText Typo="Typo.h6" Class="text-responsive-h6">Bewaartermijn</MudText>
                    <MudText Typo="Typo.body2" Class="text-responsive-body">
                        Gegevens worden alleen bewaard zolang nodig
                    </MudText>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-4 text-responsive-h4">Uw Rechten</MudText>
      <MudPaper Elevation="2" Class="responsive-padding mb-6 card-animate">
        <MudText Typo="Typo.body1" Class="mb-4 text-responsive-body">
            Onder toepasselijke gegevensbeschermingswetten heeft u de volgende rechten:
        </MudText>
        <MudList T="string">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Visibility" Class="text-responsive-body">
                <MudText><strong>Recht op Toegang:</strong> Verzoek om een kopie van uw persoonlijke gegevens die wij bewaren</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Edit" Class="text-responsive-body">
                <MudText><strong>Recht op Rectificatie:</strong> Corrigeren van onjuiste of onvolledige gegevens</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Delete" Class="text-responsive-body">
                <MudText><strong>Recht op Verwijdering:</strong> Verzoek om verwijdering van uw persoonlijke gegevens</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Block" Class="text-responsive-body">
                <MudText><strong>Recht van Bezwaar:</strong> Bezwaar maken tegen de verwerking van uw gegevens</MudText>
            </MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.GetApp" Class="text-responsive-body">
                <MudText><strong>Recht op Overdraagbaarheid:</strong> Ontvang uw gegevens in een overdraagbaar formaat</MudText>
            </MudListItem>
        </MudList>
    </MudPaper>

    <MudDivider Class="my-6" />

    <MudPaper Elevation="2" Class="responsive-padding card-animate" Style="background: var(--mud-palette-info-lighten);">        <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-3">
            <MudIcon Icon="@Icons.Material.Filled.ContactMail" Style="color: var(--mud-palette-info);" />
            <MudText Typo="Typo.h5" Class="text-responsive-h5">Contacteer Ons</MudText>
        </MudStack>
        <MudText Typo="Typo.body1" Class="mb-3 text-responsive-body">
            Voor vragen over dit privacybeleid of om uw rechten uit te oefenen, neem contact met ons op via onze 
            <MudLink Href="/faq" Style="color: var(--mud-palette-info);">FAQ-pagina</MudLink> of gebruik ons contactformulier.
        </MudText>
        <MudText Typo="Typo.body2" Class="text-responsive-body" Style="color: var(--mud-palette-text-secondary);">
            <strong>Laatst bijgewerkt:</strong> Juni 2025. Dit privacybeleid kan periodiek worden bijgewerkt om wijzigingen in onze praktijken of wettelijke vereisten weer te geven.
        </MudText>
    </MudPaper>
</MudPaper>
